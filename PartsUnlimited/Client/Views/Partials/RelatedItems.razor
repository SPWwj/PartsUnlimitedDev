@using PartsUnlimited.Shared.Models;

<section>
    <div uk-slider="finite: true">
        <div class="uk-grid-small uk-flex-middle uk-margin-bottom" uk-grid>
            <h2 class="uk-width-expand uk-text-center uk-text-left@s">
                Related Products
            </h2>
            <div class="uk-visible@s">
                <a class="tm-slidenav" href="#"
                   uk-slider-item="previous" uk-slidenav-previous></a><a class="tm-slidenav" href="#" uk-slider-item="next"
                                                                         uk-slidenav-next></a>
            </div>
        </div>
        <div>
            <div class="uk-card uk-card-default uk-card-small tm-ignore-container">
                <div class="uk-position-relative">
                    <div class="uk-slider-container">
                        <div class="uk-slider-items uk-grid-collapse uk-child-width-1-3 uk-child-width-1-4@m tm-products-grid">
                            @if (Products == null)
                            {
                                <em>Loading...</em>
                            }
                            else
                            {
                                foreach (var item in Products)
                                {
                                    <ProductCard_ Product="item" />
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
            <ul class="uk-slider-nav uk-dotnav uk-flex-center uk-margin-top uk-hidden@s">
            </ul>
        </div>
    </div>
</section>

@code {
    [Parameter] public Product[] Products { get; set; }
}
