@using PartsUnlimited.Shared.Models;

<section class="uk-section uk-section-small">
    <div class="uk-container">
        <h2 class="uk-text-center">Trending Items</h2>
        <div class="uk-card uk-card-default tm-ignore-container">
            <div class="uk-grid-collapse uk-child-width-1-3 uk-child-width-1-4@m tm-products-grid" uk-grid>

                @if (Products == null)
                {
                    <em>Loading...</em>
                }
                else
                {
                    foreach (var item in Products)
                    {
                        <ProductCard_ Product="item" />
                    }
                }
            </div>
        </div>
        <div class="uk-margin uk-text-center">
            <a class="uk-link-muted uk-text-uppercase tm-link-to-all"
               href="subcategory">
                <span>shop all</span><span uk-icon="icon: chevron-right; ratio: .75;"></span>
            </a>
        </div>
    </div>
</section>

@code {
    [Parameter] public Product[] Products { get; set; }
}

